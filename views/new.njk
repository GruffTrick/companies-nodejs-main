{% extends 'layout.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block content %}

    <form method="post">

{% call govukFieldset({
    legend: {
        text: "New Company Details",
        classes: "govuk-fieldset__legend--l",
        isPageHeading: false
    }
}) %}

    {{ govukInput({
        label: {
            text: "Company Name"
        },
        id: "company_name",
        name: "companyName",
        autocomplete: "company-name"
    }) }}

    {{ govukInput({
        label: {
            text: "Registered Address"
        },
        id: "company_address",
        name: "companyAddress",
        autocomplete: "company-address"
    }) }}

    {{ govukCheckboxes({
        name : "companyActive",
        id: "company-active",
        items: [
            {
                value: "active",
                text: "Active?"
            }
        ]
    }) }}

    {{ govukDateInput({
        id: "company-inc",
        namePrefix: "companyInc",
        fieldset: {
            legend: {
                text: "Incorporation Date",
                isPageHeading: false,
                classes: "govuk-fieldset__legend--s"
            }
        },
        hint: {
            text: "(leave blank for today)"
        }
    }) }}

    {{ govukSelect({
        id: "company-type",
        name: "companyType",
        label: {
            text: "Company Type"
        },
        items: [
            {
                value: "LTD",
                text: "Limited Company (Ltd)"
            },
            {
                value: "FXC",
                text: "Foreign Company"
            },
            {
                value: "LLP",
                text: "Limited Liability Partnership (LLP)"
            },
            {
                value: "NPO",
                text: "Non-profit Organization"
            }
        ]
    }) }}

{% endcall %}

{{ govukButton({
    text: "Register"
}) }}

    </form>

{% endblock %}
